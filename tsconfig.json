{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2021", "DOM", "DOM.Iterable", "ES2021.String"],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "noEmit": false,
    "outDir": "./dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["packages/*", "packages/**/*.vue", "packages/**/*.tsx", "packages/**/*.ts", "packages/**/*.js"],
}
